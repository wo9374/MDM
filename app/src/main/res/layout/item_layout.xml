<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"

    app:cardElevation="1dp"
    app:cardCornerRadius="10dp"

    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">
    <!-- cardElevation //그림자 효과
         cardCornerRadius //레이아웃 모서리 반지름
         cardUseCompatPadding //음영이 표시될 공간 자동 확보-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/item_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Text"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"

            android:layout_centerHorizontal="true"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_centerHorizontal="true"
            android:layout_below="@+id/item_txt"
            android:layout_marginTop="10dp">
            <ImageView
                android:id="@+id/img_icon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/selector_icon_red_green"/>
            <TextView
                android:id="@+id/item_subtxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Allow/Deny"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@drawable/selector_icon_txt_red_green"/>
        </LinearLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>